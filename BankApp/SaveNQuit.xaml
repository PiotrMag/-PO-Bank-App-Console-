<Page x:Class="BankApp.SaveNQuit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SaveNQuit">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="files/background.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="2" Content="Zmiany zostały zapisane" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" Height="55" Width="404" FontFamily="Arial Unicode MS" Foreground="Yellow"/>
        <Label Grid.Row="3" Content="Dziękujemy za skorzystanie z programu" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="Yellow" FontFamily="Arial Unicode MS" FontSize="42"/>
    </Grid>
</Page>
